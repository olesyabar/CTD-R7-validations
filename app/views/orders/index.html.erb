<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<div id="orders">
  <% @orders.each do |order| %>
    <div class="card shadow p-3 mb-2 bg-white rounded">
      <%= render order %>
      <p>
        <%= link_to "Show this order", order, class: "btn btn-primary" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New order", new_order_path, class: "btn btn-success" %>
